@model IEnumerable<KhamsaCourseProject.Areas.Admin.Models.StudentGroup>

@{
    ViewData["Title"] = "StudentGroup";
}

<p>
    <a asp-action="CreateGroup">Yeni</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Sıra nömrəsi
            </th>
            <th>
                Adı
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Düzəliş", "EditGroup", new { id = item.Id }) |
                    @Html.ActionLink("Sil", "DeleteGroup", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
